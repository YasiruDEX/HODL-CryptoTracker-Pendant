uint8_t draw_state = 0;

void setup(void) {
  u8g2.begin();
  Serial.begin(115200);
}

void loop(void) {
  // picture loop  
  u8g2.clearBuffer();
  u8g2_prepare();
  u8g2_string(draw_state&7);
  u8g2.sendBuffer();
  
  // increase the state
  draw_state++;
  if ( draw_state >= 12*8 )
    draw_state = 0;

  // deley between each page
  delay(100);

}
